{
  "search.exclude": {
    "**/.yarn": true,
    "**/.pnp.*": true
  },

  // Only validate through Stylelint
  "css.validate": false,
  "scss.validate": false,
  "stylelint.enable": true,
  "stylelint.validate": ["css", "scss"],

  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.tabSize": 2
  },
  "[handlebars]": {
    "editor.tabSize": 2
  },

  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": [
    "chatcommands",
    "dronify",
    "fvtt",
    "hexinterface",
    "HEXPROTO",
    "hexprotocol",
    "Keysmash",
    "Mxtress"
  ],
  "typescript.tsdk": "node_modules\\typescript\\lib",
  "i18n-ally.localesPaths": ["static/lang"],
  "i18n-ally.keystyle": "nested"
}
